<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.auxilio.auxilio.PersonForm">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/parent_add_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Parent"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parent_add_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Relative"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/parent_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/parents_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/parent_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero De Celular" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/parent_address"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:hint="Direccion" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/parent_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next" />

    <Button
        android:id="@+id/parent_done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done" />


</LinearLayout>
