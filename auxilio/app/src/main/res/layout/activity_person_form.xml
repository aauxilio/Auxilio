<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.auxilio.auxilio.PersonForm">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/parent_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Benito" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/parents_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sanchez" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/parent_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="(831) 849-2948" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/parent_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="123 Camino Real, Greenfield CA 93927" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/parent_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Relatives" />

    <Button
        android:id="@+id/parent_done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done" />


</LinearLayout>
